{
    "name": "podcasthosting/podcaster-sdk",
    "description": "Toolset to easily connect a client to the podcaster API.",
    "keywords": ["api", "podcaster", "hosting"],
    "license": "GPL-2.0+",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "league/oauth2-client": "^2.3",
        "vlucas/phpdotenv": "^2.4",
        "kriswallsmith/buzz": "^1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~8.0",
        "tuupola/http-factory": "^1.0",
        "mockery/mockery": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Podcaster\\": "src/Podcaster/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Podcaster\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}